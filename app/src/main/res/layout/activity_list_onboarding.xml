<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/containerLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imagePerson"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_people_one"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/imgBtnGo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/ic_button_round"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageButton
            android:id="@+id/arroyView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/ic_arrow_left"
            app:layout_constraintBottom_toBottomOf="@+id/imgBtnGo"
            app:layout_constraintEnd_toEndOf="@+id/imgBtnGo"
            app:layout_constraintStart_toStartOf="@+id/imgBtnGo"
            app:layout_constraintTop_toTopOf="@+id/imgBtnGo" />

        <TextView
            android:id="@+id/tittleObjective"
            style="@style/black_normal_24sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="40dp"
            android:text="@string/trackyourGoal"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imagePerson" />

        <TextView
            android:id="@+id/textView"
            style="@style/black_normal_16sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="20dp"
            android:text="@string/descriptionOneOnboarding"
            android:textStyle="normal"
            app:layout_constraintEnd_toEndOf="@+id/tittleObjective"
            app:layout_constraintStart_toStartOf="@+id/tittleObjective"
            app:layout_constraintTop_toBottomOf="@+id/tittleObjective" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>